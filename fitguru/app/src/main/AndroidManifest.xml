<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.fitguru">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/custom"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.FitGuru">
        <activity
            android:name="hu.bme.aut.fitguru.DietActivity"
            android:exported="false" />
        <activity
            android:name="hu.bme.aut.fitguru.WelcomeActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.bme.aut.fitguru.TrainingActivity"
            android:exported="true" />
        <activity
            android:name="hu.bme.aut.fitguru.PersonalActivity"
            android:exported="true"
            android:theme="@style/CTheme" />
        <activity
            android:name="hu.bme.aut.fitguru.HealthActivity"
            android:exported="true" />
        <activity
            android:name="hu.bme.aut.fitguru.MenuActivity"
            android:exported="true"
            android:theme="@style/CTheme" />
    </application>

</manifest>